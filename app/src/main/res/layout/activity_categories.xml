<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/categories_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your categories"
        android:textSize="24dp"
        android:textFontWeight="700"
        android:textColor="@color/black">
    </TextView>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:id="@+id/icon_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/business"
            android:paddingLeft="16dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp">
        </ImageView>
        <ImageView
            android:id="@+id/icon_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/music"
            android:paddingLeft="16dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp"
            >
        </ImageView>
        <ImageView
            android:id="@+id/icon_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group"
            android:paddingLeft="16dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp">
        </ImageView>
        <ImageView
            android:id="@+id/icon_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:paddingLeft="16dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp">
        </ImageView>
        <ImageView
            android:id="@+id/icon_chemistry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chemistry"
            android:paddingLeft="16dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp">
        </ImageView>
        <ImageView
            android:id="@+id/icon_sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/soccer"
            android:paddingLeft="16dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp">
        </ImageView>
        <ImageView
            android:id="@+id/icon_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/technology"
            android:paddingLeft="16dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingRight="16dp">
        </ImageView>
    </GridLayout>


</LinearLayout>